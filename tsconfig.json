{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNEXT",
    "module": "ESNEXT",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "pass-lang": [
        "packages/pass-lang/src"
      ],
      "@pass-lang/*": [
        "packages/*/src"
      ]
    }
  }
}