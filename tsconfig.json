{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string", "es2020", "es2021"],
    "target": "ES2019",
    "module": "ESNEXT",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "passlang": [
        "packages/passlang/src"
      ],
      "@passlang/*": [
        "packages/*/src"
      ]
    }
  },
  "include": [
    "packages/*/src",
  ]
}
