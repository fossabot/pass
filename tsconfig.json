{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNEXT",
    "module": "ESNEXT",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "pass-compile": [
        "packages/pass-compile/src"
      ],
      "@pass/*": [
        "packages/*/src"
      ]
    }
  },
  "include": [
    "packages/*/src",
  ]
}
